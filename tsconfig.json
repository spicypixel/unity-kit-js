{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "module": "umd",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noResolve": false,
    "outDir": "./",
    "preserveConstEnums": true,
    "removeComments": false,
    "rootDir": "./src",
    "sourceRoot": "../src",
    "sourceMap": true,
    "target": "esnext",
    "baseUrl": "node_modules/@spicypixel/build-kit-js/types",
    "typeRoots": [
      "node_modules/@spicypixel/build-kit-js/types"
    ]
  },
  "exclude": [
    "gulpfile.ts",
    "lib",
    "test"
  ]
}