{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "module": "umd",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noResolve": false,
    "outDir": "./",
    "preserveConstEnums": true,
    "removeComments": false,
    "rootDir": "./src",
    "sourceRoot": "../src",
    "sourceMap": true,
    "target": "esnext"
  },
  "exclude": [
    "gulpfile.ts",
    "node_modules",
    "lib",
    "test"
  ]
}